services:
  pihole:
    image: "{{ pihole_image }}"
    container_name: pihole
    hostname: pihole
    restart: unless-stopped
{% if pihole_traefik_enabled %}
    networks:
      - {{ pihole_traefik_network }}
{% else %}
    network_mode: {{ pihole_network_mode | to_json }}
{% endif %}
{% if pihole_network_mode != "host" %}
    ports:
      - "53:53/tcp"
      - "53:53/udp"
{% if not pihole_traefik_enabled %}
      - "{{ pihole_web_port }}:80/tcp"
{% endif %}
{% if pihole_enable_dhcp %}
      - "67:67/udp"
{% endif %}
{% endif %}
    environment:
      TZ: "{{ pihole_timezone }}"
      WEBPASSWORD: "{{ pihole_web_password }}"
      DNS1: "{{ pihole_dns1 }}"
      DNS2: "{{ pihole_dns2 }}"
      FTLCONF_DNSMASQ_LISTENING: {{ pihole_dnsmasq_listening | to_json }}
{% if pihole_local_ipv4 | length > 0 %}
      FTLCONF_LOCAL_IPV4: "{{ pihole_local_ipv4 }}"
{% endif %}
    volumes:
      - "{{ pihole_data_dir }}:/etc/pihole"
      - "{{ pihole_dnsmasq_dir }}:/etc/dnsmasq.d"
{% if pihole_traefik_enabled %}
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network={{ pihole_traefik_network }}"
      - "traefik.http.routers.{{ pihole_traefik_router }}.rule=Host(`{{ pihole_traefik_host }}`)"
      - "traefik.http.routers.{{ pihole_traefik_router }}.entrypoints={{ pihole_traefik_entrypoints }}"
      - "traefik.http.routers.{{ pihole_traefik_router }}.tls={{ pihole_traefik_tls | to_json }}"
      - "traefik.http.services.{{ pihole_traefik_router }}.loadbalancer.server.port=80"
{% endif %}
    cap_add:
      - NET_ADMIN
{% if pihole_network_mode != "host" %}
    dns:
      - {{ pihole_dns1 | to_json }}
{% if pihole_dns2 | length > 0 %}
      - {{ pihole_dns2 | to_json }}
{% endif %}
{% endif %}
{% if pihole_sync_enabled %}
  pihole-sync:
    image: "{{ pihole_sync_image }}"
    container_name: pihole-sync
    restart: unless-stopped
    depends_on:
      - pihole
{% if pihole_traefik_enabled %}
    networks:
      - {{ pihole_traefik_network }}
{% elif pihole_network_mode == "host" %}
    network_mode: "host"
{% endif %}
    environment:
      PRIMARY_PIHOLE: "{{ pihole_sync_primary_url }}"
      SYNC_INTERVAL: "{{ pihole_sync_interval }}"
      SYNC_BACKOFF_SECONDS: "{{ pihole_sync_backoff_seconds }}"
      PIHOLE_PASSWORD: "{{ pihole_sync_password }}"
{% if pihole_traefik_enabled %}
      LOCAL_PIHOLE_API: "http://pihole/api"
{% else %}
      LOCAL_PIHOLE_API: "{{ pihole_sync_local_api }}"
{% endif %}
    volumes:
      - "{{ pihole_compose_dir }}/sync:/sync:ro"
    entrypoint: ["python3", "/sync/sync.py"]
{% endif %}

{% if pihole_traefik_enabled %}
networks:
  {{ pihole_traefik_network }}:
    external: true
{% endif %}
